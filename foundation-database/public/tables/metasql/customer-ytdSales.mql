SELECT COALESCE(SUM(round(extprice,2)), 0) AS ytdsales 
FROM saleshistorymisc 
WHERE cohist_invcdate>=DATE_TRUNC('year', CURRENT_TIMESTAMP)
  AND cohist_cohead_ccpay_id IS NULL
  AND cohist_cust_id = <? value('cust_id') ?>;